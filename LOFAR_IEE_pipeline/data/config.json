{
    "IEEFACTOR": {
        "label": "UC2 IEE pipeline",
        "schema": {
            "type": "object",
            "title": "Configuration Parameters:",
            "description": "This is PROCESS UC2 IEE pipeline for LOFAR observation calibration and imaging",
            "properties": {
                "staging": {
                    "type": "object",
                    "properties": {
                        "url": {
                            "type": "string",
                            "title": "Staging service URL",
                            "default": "<STAGING_SERVICE_URL>",
                            "readonly": true
                        },
                        "login": {
                            "type": "string",
                            "title": "User login on LTA",
                            "default": "<LTA_LOGIN>",
                            "readonly": true
                        },
                        "pwd": {
                            "type": "string",
                            "title": "User pass on LTA",
                            "default": "<LTA_PWD>",
                            "readonly": true
                        }
                    },
                    "required": [
                        "url",
                        "login",
                        "pwd"
                    ],
                    "collapsed": false,
                    "propertyOrder": 3
                },
                "hpc": {
                    "type": "object",
                    "properties": {
                        "headnode": {
                            "type": "string",
                            "title": "HPC head node",
                            "default": "<HPC_HEADNODE>"
                        },
                        "path": {
                            "type": "string",
                            "title": "Where observation will be transferred to on HPC",
                            "default": "<YOUR_DATADIR>"
                        },
                        "url": {
                            "type": "string",
                            "title": "Download service URL",
                            "default": "<TRANSFER_SERVICE_URL>"
                        },
                        "srmcert": {
                            "type": "string",
                            "title": "SRM certificate for transfer",
                            "default": "<CERTIFICATE_CONTENT>",
                            "format": "textarea"
                        },
                        "login": {
                            "type": "string",
                            "title": "User login on HPC",
                            "default": "<HPC_LOGIN>"
                        },
                        "pwd": {
                            "type": "string",
                            "title": "User pass on HPC",
                            "default": "<HPC_PWD>"
                        },
                        "apikey": {
                            "type": "string",
                            "title": "API key for IEE connection (JWT)",
                            "default": "<IEE_JWT>"
                        },
                        "factordir": {
                            "type": "string",
                            "title": "FACTOR working directory",
                            "default": "/mnt/out/factor"
                        },
                        "workdir": {
                            "type": "string",
                            "title": "Working directory",
                            "default": "/mnt/workdir/test"
                        },
                        "datadir": {
                            "type": "string",
                            "title": "Directory where transferred observations will be stored",
                            "default": "/mnt/in"
                        },
                        "container": {
                            "type": "string",
                            "title": "Container image to be run",
                            "default": "<YOUR_CONTAINER_NAME>"
                        },
                        "compute_site": {
                            "type": "string",
                            "title": "PROCESS computing site name",
                            "default": "Cyfronet: Prometheus"
                        },
                        "webdav_pwd": {
                            "type": "string",
                            "title": "LOBCDER WebDAV UC2 results endpoint pass",
                            "default": "7why4dks"
                        }
                    },
                    "required": [
                        "headnode",
                        "path",
                        "url",
                        "srmcert",
                        "login",
                        "pwd",
                        "apikey",
                        "factordir",
                        "workdir",
                        "datadir",
                        "container",
                        "compute_site",
                        "webdav_pwd"
                    ],
                    "collapsed": false,
                    "propertyOrder": 4
                }
            },
            "required": [
                "staging",
                "hpc"
            ]
        },
        "id": "IEEFACTOR"
    }
}
